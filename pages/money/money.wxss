/* pages/money/money.wxss */
.logo{
  text-align: center;
  padding: 60rpx;
}
.logo image{
  width:120rpx;
}
.logo .money{
  color: #d24d46;
  padding:40rpx 0 0 0;
  font-size: 50rpx;
}
.content{
  padding:20rpx 30rpx;
}
.content .money{
  border-bottom:1px solid #ddd;
  padding: 20rpx 0;
}
.money input{
  display: inline-block;
  width: 80%;
  font-size: 26rpx;
}
input{
  height:inherit;
  min-height: inherit;
}
.notice{
   font-size: 26rpx;
   padding-top:30rpx;
}
.notice view{
  display: inline-block;
}
.color{
  color:#3098f9;
  cursor: pointer;
}
.color.question{
  text-align: center;
  font-size: 28rpx;
  padding-top:60rpx;
}
button{
  border-width: 1px;
  border-style: solid;
  font-size: 28rpx;
  border-radius: 4px;
  text-align: center;
  line-height: 80rpx;
  border-color: #1aad19;
  background-color: #1aad19;
  color: #fff;
  margin: 50rpx 0;
}
.bottom{
  font-size: 28rpx;
  color:#626262;
  text-align: center;
  line-height: 60rpx;
}


















