/* pages/question/question.wxss */
.box,page{
  width:100%;
  background: #f5f5f5;
}
.parent{
  margin:20rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 26rpx;
  border-radius: 4rpx;
}
.parent .title{
  color: #252525;
  height: 80rpx;
  line-height: 80rpx;
  background: url(http://ovhvevt35.bkt.clouddn.com/bao/more-icon.png) no-repeat center right;
  background-size: 20rpx;
}
.child{
  border-top:1px solid #ddd;
  color:#000;
  line-height: 40rpx;
  padding:10rpx 0 30rpx 0;
}
.chart{
  position: relative;
}
.chart button{
  border-width: 1px;
  border-style: solid;
  font-size: 28rpx;
  border-radius: 4px;
  text-align: center;
  line-height: 80rpx;
  border-color: #1aad19;
  background-color: #1aad19;
  color: #fff;
  margin: 50rpx 20rpx;
}
.contact-button{
  position: absolute;
  top:20rpx;
  right:0;
  opacity: 0;
}