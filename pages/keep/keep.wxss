/* pages/keep/keep.wxss */
.box,page{
  width:100%;
  background: #f5f5f5;
}
.tabs{
  display: flex;
  text-align: center;
  background: #fff;
  font-size: 28rpx;
}
.tabs .tab-item{
  flex: 1;
  padding: 20rpx 0;
}
.tabs .tab-item.active{
  border-bottom:1px solid #d24d46;
}
.content{
  text-align: center;
  padding:40rpx 0;
}
.content .avatarUrl image{
    width:140rpx;
    border-radius: 50%;
    border:2px solid #d24d46;
    box-sizing: border-box;
}
.avatarUrl .nickName{
    font-size: 26rpx;
}
.content .give{
  font-size: 60rpx;
  color: #d24d46;
  padding:20rpx 0;
}
.content .num{
  color:#626262;
}
.content .num text{
  color: #d24d46;
}
.keepList{
  width: 100%;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}
.keepList .itemkeep{
  background: #fff;
  border-radius: 10rpx;
  padding:20rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin: 20rpx 0;
}
.keepList .itemkeep .item .left{
  display: inline-block;
  width: 69%;
  white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.keepList .itemkeep .item .right{
  display: inline-block;
  width: 30%;
  text-align: right;
}
.keepList .itemkeep .time{
  color: #626262;
}
.keepList .itemkeep .sum .right{
  color: #d24d46;
}
