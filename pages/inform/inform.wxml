                            <view class='sum item'>
                                <view class='left userimg'>
                                <image src="{{item.avatar}}" mode='widthFix'></image>
                                    {{item.nickname}}
                                    <!--sex  -->
                                    <text class='bga' wx:if="{{item.gender == 2}}">女 {{item.age}}岁</text>
                                    <text class='bga' wx:if="{{item.gender == 1}}">男 {{item.age}}岁</text>
