                                <view class='lefts'>颜值：<text class='color'>{{item.beauty}}</text></view>
                                <view>奖励￥<text class='color'>{{item.receive_money}}</text></view>
                                <view class='right'>时间：<text class='color'>{{item.receive_time}}</text></view>
                            </view>
