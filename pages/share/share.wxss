/* pages/share/share.wxss */
page{
  background: #d24d46;
}
.content{
  text-align: center;
  padding:40rpx 0;
  background: url(http://ovhvevt35.bkt.clouddn.com/bao/redhalf.png) no-repeat 100% 20%;
  background-size: contain;
}
.content .avatarUrl image{
    width:100rpx;
    border-radius: 50%;
    border:2px solid #fff;
    box-sizing: border-box;
}
.avatarUrl .nickName{
  color:#f3dab2;
  font-size: 26rpx;
  padding: 20rpx 0;
}
.avatarUrl .nickName view{
  display: inline-block;
}
.content .question{
  font-size: 40rpx;
  color: #f3dab2;
  padding:20rpx 0;
}
.content .question image{
    width: 200rpx;
    border-radius: 50%;
    border:2px solid #f3dab2;
}
.content .type{
    width:80%;
    margin: 30rpx auto;
    border-width:1px;
    font-size:28rpx;
    border-radius:4px;
    text-align:center;
    line-height:80rpx;
    border:1px solid #ddd;
    cursor: pointer;
}
.type button{
  background:#1aad19;
  color:#fff;
  font-size:28rpx;
  border-radius:4px;
  text-align:center;
  line-height:84rpx

}
.content .type.no{
    background: #1aad19;
    color: #fff;
}
.content .type.yes{
    background: #fff;
    color: #000;
}
.content .money{
  text-align: center;
  font-size: 26rpx;
  color: #f3dab2;
}
.content .money text{
  font-size: 36rpx;
}
.change image{
    width:32rpx;
    padding-right:10rpx;
    box-sizing: border-box;
}
.change{
  color:#3098f9;
  text-align: center;
  font-size: 24rpx;
  margin: 10rpx 0;
  cursor: pointer;
  padding: 10rpx 0;
}
.option{
  background: #fff;
  width: 90%;
  margin: 0 auto;
  padding:20rpx 0;
  border-radius: 10rpx;
}